{
  "format": "page",
  "id": "page",
  "label": "Page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Page heading",
          "placeholder": ""
        }
      },
      "page_intro": {
        "type": "StructuredText",
        "config": {
          "label": "Page intro",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink,list-item,o-list-item"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "testimonial": {
              "type": "SharedSlice"
            },
            "testimonial_list": {
              "type": "SharedSlice"
            },
            "resource_list": {
              "type": "SharedSlice"
            },
            "email_signup_form": {
              "type": "SharedSlice"
            },
            "divider": {
              "type": "SharedSlice"
            },
            "cards": {
              "type": "SharedSlice"
            },
            "hero_banner": {
              "type": "SharedSlice"
            },
            "image_text": {
              "type": "SharedSlice"
            },
            "text_block": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
